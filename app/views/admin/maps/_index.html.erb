<script src="//maps.google.com/maps/api/js?key=<%= ENV['GOOGLE_API_KEY'] %>"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
<div class="col-lg-12">
  <div class="map">
    <%= render partial: 'map', locals: {submissions: []} %>
  </div>
  <br>

  <div class="form-group.col-lg-6">
    <form method="get" id="q_search" class="submission_map_filter_form" action="#">
      <div class="filter_form_field filter_string">
        <table>
          <tbody>
          <tr>
            <td style="width:300px">
              <b><label for="q_category_ids" class=" label">Species</label></b><br/>
              <%= select_tag('q[category_id_in]', options_for_select(categories), multiple: true) %>
            </td>
            <td style="width:300px">
              <b><label for="q_sub_category_ids" class=" label">Samples</label></b><br/>
              <%= select_tag('q[sub_category_id_in]', options_for_select(sub_categories), multiple: true) %>
            </td>
          </tr>
          <tr>
            <td style="width:300px">
              <b><label for="q_site_id_in" class=" label">Sites</label></b><br/>
              <%= select_tag('q[site_id_in]', options_for_select(sites), multiple: true) %>
            </td>
            <td style="width:300px">
              <b><label for="q_location_id_in" class=" label">Locations</label></b><br/>
              <%= select_tag('q[location_id_in]', options_for_select(locations), multiple: true) %>
            </td>
          </tr>
          <tr>
            <td style="width:300px">
              <b><label for="q_project_id_in" class=" label">Projects</label></b><br/>
              <%= select_tag('q[project_id_in]', options_for_select(projects), multiple: true) %>
            </td>
            <td style="width:300px"></td>
          </tr>
          </tbody>
        </table>

        <input type="submit" value="Go" name="commit" id="q_submit" />
      </div>
    </form>
  </div>

  <div class="modal"></div>

</div>
