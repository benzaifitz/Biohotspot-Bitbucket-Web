<h2><%= "You have been invited as a project manager to #{@project&.title}" %></h2>
  <%= form_for(@user, :url => pm_accept_path(user: @user), method: :post) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, readonly: true %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password %>
      <em>(8 characters minimum)</em>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Accept Invitation" %>
  </div>
<% end %>

<script>
  $(document).ready(() => {
    $("form").submit(function(e){
        console.log('done !!')
      if(($('#project_manager_password').val().trim() == $('#project_manager_password_confirmation').val().trim()) && ($('#project_manager_password').val().trim().length == 8)) {
          console.log('password passed!!')
          return true;      }
      else {
        alert('Password must be same and of minimum 8 digits.');
        return false;;
      }
    });
  });
</script>

